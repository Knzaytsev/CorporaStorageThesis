@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Текстовые файлы</title>
</head>
<body>
    <div>
        <h3>Файлы</h3>
        <table>
            <tr>
                <td><p>Название</p></td>
                <td><p>Дата</p></td>
            </tr>
            @foreach (var b in ViewBag.Texts as List<TextFileModel>)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Date</p></td>
                    <td><p><a href="EditTextFile/@ViewBag.CorpusId/@b.Id">Редактировать</a></p></td>
                    <td><p><a href="RemoveText/@ViewBag.CorpusId/@b.Id">Удалить</a></p></td>
                </tr>
            }
        </table>
    </div>
    <div><p><a href="/ADWISER/Main">Назад</a></p></div>
</body>
</html>